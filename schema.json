{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "@runnerty-notifier-mail",
  "definitions": {
    "config": {
      "type": "object",
      "required": ["id", "type", "transport", "templateDir", "template"],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "@runnerty-notifier-mail"
        },
        "from": {
          "type": "string"
        },
        "transport": {
          "type": ["string", "object"],
          "properties": {
            "service": {
              "type": "string",
              "enum": ["SES"]
            },
            "region": {
              "type": "string"
            },
            "ses": {
              "type": "object"
            }
          }
        },
        "templateDir": {
          "type": "string"
        },
        "template": {
          "type": "string"
        },
        "to": {
          "type": "array"
        }
      }
    },
    "params": {
      "type": "object",
      "required": ["id", "message", "subject"],
      "properties": {
        "id": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        },
        "to": {
          "type": "array"
        },
        "attachments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "filename": {
                "type": "string"
              },
              "content": {
                "type": "string"
              },
              "path": {
                "type": "string"
              },
              "contentType": {
                "type": "string"
              },
              "encoding": {
                "type": "string"
              },
              "raw": {
                "type": "string"
              }
            }
          }
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}
